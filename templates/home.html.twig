{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue dans notre club !!
{% endblock %}

{% block header%}
    <h2>Voici le header</h2>
{% endblock %}

{% block stylesheets %}
    <link href="../css/home.css" rel="stylesheet">
    <style>
        @media screen and (max-width: 768px) {
            .card {
                margin-bottom: 20px;
            }
            .card img {
                height: auto;
                max-width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}

    <div class="container">
                
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://images.mantosdofutebol.com.br/wp-content/uploads/2022/06/Camisa-titular-do-PSG-2022-2023-Nike.jpg" alt="Parc des princes">
            <div class="carousel-caption d-none d-md-block">
                <h1>Paris Saint Germain</h1>
                <p>Ici c'est Paris</p>
                <a href="{{ path('clubs_index') }}" class="btn btn-danger">Voir notre équipe</a>
            </div>
        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="https://siecledigital.fr/wp-content/uploads/2021/08/psg-cryptomonnaie.jpg?anchor=center&mode=crop&width=1200&height=800&quality=75?auto=yes&bg=555&fg=333&text=Third slide" alt="Ecusson">
        </div>

        <div class="carousel-item">
            <img class="d-block w-100" src="https://www.vipsg.fr/wp-content/uploads/2019/04/arcadevr-header.jpg?auto=yes&bg=777&fg=555&text=First slide" alt="Equipe">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    <h2 class="h1 mt-3 mb-4">Nos dernières rencontres</h2>

    <div class="row">
        {% for rencontre in dernieresRencontres %}
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="background-color:rgba(255, 255, 255, 0.47)">
                    <div class="card-header text-center">
                    </div>

                    <img src="{{ rencontre.rencontreImage }}" alt="{{ rencontre.domicile }} - {{ rencontre.exterieur }} " class="card-img-top" style="height: 200px; width: 100%; display: block">

                    <div class="card-body">
                        <h4 class="card-title">
                            {{ rencontre.domicile }} - {{ rencontre.exterieur }}
                        </h4>
                        <h4>
                            Score du match : {{ rencontre.score }}
                        </h4>
                        <a href="{{ path('rencontre_show', {'id': rencontre.id}) }}" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <h2 class="h1 mt-3 mb-4">Nos prochaines rencontres</h2>

    <div class="row">
        {% for rencontre in prochainesRencontres %}
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="background-color:rgba(255, 255, 255, 0.47)">
                    <div class="card-header text-center">
                    </div>

                    <img src="{{ rencontre.rencontreImage }}" alt="{{ rencontre.domicile }} - {{ rencontre.exterieur }} " class="card-img-top" style="height: 200px; width: 100%; display: block">

                    <div class="card-body">
                        <h4 class="card-title">
                            {{ rencontre.domicile }} - {{ rencontre.exterieur }}
                        </h4>
                        <a href="{{ path('rencontre_show', {'id': rencontre.id}) }}" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <h2 class="h1 mt-3 mb-4">Nos joueurs stars</h2>

    <div class="row">
        <div class="col-md-6 ">
            <div class="card border-secondary mb-3" style="background-color:rgba(255, 255, 255, 0.47)">
                <div class="card-body">
                    <h4 class="card-title">Neymar</h4>
                    <hr>
                    <div class="card-tet">
                        <img src="https://www.psg.fr/media/27084/hero_22-23-neymar.png?center=0.5,0.5&mode=crop&width=800&height=800&quality=80" alt="Avatar de Neymar" class="float-left mr-3 img-fluid">
                        <a href="joueur/10" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-secondary mb-3" style="background-color:rgba(255, 255, 255, 0.47)">
                <div class="card-body">
                    <h4 class="card-title">Kyllian Mbappe</h4>
                    <hr>
                    <div class="card-tet">
                        <img src="https://www.psg.fr/media/27081/hero_22-23-mbappe.png?center=0.5,0.5&mode=crop&width=800&height=800&quality=80" alt="Avatar de Mbappe" class="float-left mr-3 img-fluid">
                        <a href="joueur/7" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
